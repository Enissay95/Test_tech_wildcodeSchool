<form method="post" action="{{ path('app_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <i class="d-grid gap-2 col-1 mx-auto mt-2"><button class="btn btn-danger  ">Delete</button></i>
</form>
