   {% endif %}

  {% endfor %}
  </tbody>
</table>

  <div class="d-grid gap-2 col-3 mx-auto mt-5">
    <a class="btn btn-secondary" href="{{ path('app_add') }}" >Create new</a>
  </div>

{% endblock %}
